<div class="container-fluid">
	 <% if (my.length > 0) { %>
  		<div class="panel panel-primary">
			<div class="panel-heading"><b>My projects</b></div>
      			<table class="table table-striped table-hover">
						<thead><tr><th>Name</th><th>Privacy</th><th>Status</th></tr></thead>
						<tbody>
						<% my.forEach(function(i) { %><tr>
							<td><%= i.name %></td>
							<% if (i.privacy === 'public') { %>
								<td><span class="btn btn-success disabled">Public</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Private</span></td>
							<% } %>

							<% if (i.status === 'developing') { %>
								<td><span class="btn btn-danger disabled">Developing</span></td>
							<% } else if(i.status === 'testing') { %>
								<td><span class="btn btn-warning disabled">Testing</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Production</span></td>
							<% } %>
							<td><a href="/project/<%= i.id %>"><span class="btn btn-default">Details >></span></a></td>
							</tr><% }) %>
						</tbody>
			 		</table>

    	</div>
	<% } else { %>
		<div class="well">You don't created any projects</div>
	<% } %>
	<hr />
	<% if (public.length > 0) {%>
  		<div class="panel panel-primary">
			<div class="panel-heading"><b>Public projects</b></div>
      		<table class="table table-striped table-hover">
						<thead><tr><th>Name</th><th>Privacy</th><th>Status</th></tr></thead>
						<tbody>
						<% public.forEach(function(i) { if (i.creator != user.id) { %><tr>
							<td><%= i.name %></td>
							<% if (i.privacy === 'public') { %>
								<td><span class="btn btn-success disabled">Public</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Private</span></td>
							<% } %>

							<% if (i.status === 'developing') { %>
								<td><span class="btn btn-danger disabled">Developing</span></td>
							<% } else if(i.status === 'testing') { %>
								<td><span class="btn btn-warning disabled">Testing</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Production</span></td>
							<% } %>
							<td><a href="/project/<%= i.id %>"><span class="btn btn-default">Details >></span></a></td>
							</tr><% } }) %>
						</tbody>
			 		</table>
    	</div>
	<% } else { %>
		<div class="well">There are no public projects</div>
	<% } %>
	<% if (user.admin) { %>
	<hr />
		<% if (other.length > 0) { %>
			<div class="panel panel-primary">
				<div class="panel-heading"><b>Other projects</b></div>
					<table class="table table-striped table-hover">
						<thead><tr><th>Name</th><th>Privacy</th><th>Status</th></tr></thead>
						<tbody>
						<% public.forEach(function(i) { if (i.creator != user.id) { %><tr>
							<td><%= i.name %></td>
							<% if (i.privacy === 'public') { %>
								<td><span class="btn btn-success disabled">Public</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Private</span></td>
							<% } %>

							<% if (i.status === 'developing') { %>
								<td><span class="btn btn-danger disabled">Developing</span></td>
							<% } else if(i.status === 'testing') { %>
								<td><span class="btn btn-warning disabled">Testing</span></td>
							<% } else { %>
								<td><span class="btn btn-default disabled">Production</span></td>
							<% } %>
							<td><a href="/project/<%= i.id %>"><span class="btn btn-default">Details >></span></a></td>
							</tr><% } }) %>
						</tbody>
			 		</table>
			</div>
		<% } else { %>
			<div class="well">There are not other projects</div>
		<% } %>
	<% } %>
</div>
