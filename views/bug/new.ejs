<div class="container-fluid">

	<div class="panel panel-primary">
 		<div class="panel-heading">
	  		Report new bug
  		</div>
	 	<div class="panel-body">
			<form class="form-horizontal" action="/bug/" method="post">
				<div class="form-group">
             	<label class="control-label col-sm-2" for="name">Name of bug:</label>
             	<div class="col-sm-10">
               	<input type="text" class="form-control" required="" name="name" placeholder="Enter name of bug">
             	</div>
				</div>
				<hr />
				<div class="form-group">
             	<label class="control-label col-sm-2" for="project">Project:</label>
             	<div class="col-sm-10">
               	<% if (project) { %>
							<input type="hidden" name="project" value="<%= project.id %>">
               		<input type="text" class="form-control" name="" value="<%= project.name %>" disabled="true">
      				<% } else {  %>
							<select name="status" class="form-control" required="">
        						<% for (var i = 0; i < my.length; i++) { %>
									<option value="<%= my[i].id %>"><%= my[i].name %></option>
								<% } %>
									<option disabled="true">Public projects</option>
								<% for (var i = 0; i < public.length; i++) { %>
									<option value="<%= public[i].id %>"><%= public[i].name %></option>
								<% } %>
                		</select>
						<% } %>
              	</div>
				</div>
			</form>
		</div>
 	</div>

</div>
