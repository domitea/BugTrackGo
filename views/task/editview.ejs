<div class="container-fluid">

	<div class="panel panel-primary">
 		<div class="panel-heading">
	  		Edit task
  		</div>
	 	<div class="panel-body">
			<form class="form-horizontal" action="/task/<%= task.id %>" method="post">
				<div class="form-group">
             	<label class="control-label col-sm-2" for="name">Name of task:</label>
             	<div class="col-sm-10">
               	<input type="text" class="form-control" required="" name="name" placeholder="Enter name of task" value="<%= task.name %>">
             	</div>
				</div>
				<hr />
				<div class="form-group">
             	<label class="control-label col-sm-2" for="description">Description of task:</label>
             	<div class="col-sm-10">
						<textarea rows="10" class="form-control" name="description" placeholder="Write some essay about what is nessesary to finish this task" required=""><%= task.description %></textarea>
             	</div>
				</div>
				<hr />
				<div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
			</form>
		</div>
 	</div>

