<div class="container-fluid">
	<div class="panel panel-primary">
			<div class="panel-heading">
				<b>Tasks</b>
			</div>
			<div class="panel-body">
			<% if (tasks.length > 0) { %>

			<table class="table table-striped table-hover">

				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Created</th>
						<th>On bill</th>
					</tr>
				</thead>
				<tbody>
    			<% for(var i = 0; i < tasks.length; i++) { %>
					<tr>
						<td><%= tasks[i].name %></td>
						<td><%= tasks[i].description %></td>
						<td><%= tasks[i].createdAt %></td>
						<% if (tasks[i].onBill == true) { %>
								<td><span class="btn btn-success disabled">True</span></td>
						<% } else { %>
								<td><span class="btn btn-danger disabled">False</span></td>
						<% } %>
						<td><a href="/task/<%= tasks[i].id %>"><span class="btn btn-default">Details >></span></a></td>
						<td><a href="/task/toBill/<%= tasks[i].id %>"><span class="btn btn-success">On Bill</span></a></td>
					</tr>
				<% } %>
				</tbody>
			</table>

			<% } else { %>

			<div class="alert alert-success" role="alert"><b>There are no tasks!</b></div>

   		<% } %>
		</div>
  		<div class="panel-footer">
  			<span class="btn btn-normal"><a href="../task/new/undefined">Add task</a></span>
    	</div>
	</div>

</div>
